<% if book.favorited_by?(current_user) %>
  <%= link_to book_favorites_path(book), method: :delete, class: "fas fa-heart heart-red", remote: true do %>
    <span><%= book.favorites.count %></span>
  <% end %>
<% else %>
  <%= link_to book_favorites_path(book), method: :post, class: "fas fa-heart heart-blue", remote: true do %>
    <span><%= book.favorites.count %></span>
  <% end %>
<% end %>
